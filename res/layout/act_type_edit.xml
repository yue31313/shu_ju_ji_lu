<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layTypeEditMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_var_view"
        layout="@layout/include_note_top" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:stretchColumns="1" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/layoutbg" >

                    <TextView
                        android:id="@+id/tvAcountName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:text="@string/type_name"
                        android:textColor="@color/label_text" >
                    </TextView>

                    <Button
                        android:id="@+id/btnTypeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/input_text"
                        android:textSize="18dp" >

                    </Button>
                </TableRow>
  
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:layout_weight="1"
                    android:background="@drawable/layoutbg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tvAccountIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:text="@string/type_icon"
                        android:textColor="@color/label_text" />

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btnTypeIcon"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text"
                            android:focusable="true"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/input_text"
                            android:textSize="18dp"
                            android:visibility="gone" />

                        <ptool.datacase.util.control.IconEditorView
                            android:id="@+id/icon"
                            android:layout_width="66dip"
                            android:layout_height="66dip"
                            android:layout_gravity="right|center_vertical"
                            android:background="@drawable/btn_contact_picture"
                            android:clickable="true"
                            android:cropToPadding="true"
                            android:focusable="true"
                            android:scaleType="fitCenter" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="4.0dip"
                    android:background="@drawable/layoutbg" >

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dip"
                            android:text="@string/type_mark"
                            android:textColor="@color/label_text" >
                        </TextView>

                        <Button
                            android:id="@+id/btnRemark"
                            android:layout_width="fill_parent"
                            android:layout_height="0dip"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text"
                            android:focusable="true"
                            android:gravity="left"
                            android:minLines="5"
                            android:textColor="@color/input_text"
                            android:textSize="18dp" >
                        </Button>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@drawable/back"
        android:gravity="right" >

        <LinearLayout
            android:id="@+id/layout_blank"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_selector_background"
            android:focusable="true"
            android:gravity="bottom|center"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutManage"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_selector_background"
            android:focusable="true"
            android:gravity="bottom|center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/link" >

            </ImageView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/type_chars"
                android:textColor="@color/btn_text" >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutOk"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_selector_background"
            android:focusable="true"
            android:gravity="bottom|center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ok" >
            </ImageView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/save"
                android:textColor="@color/btn_text" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCancel"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:background="@drawable/menu_selector_background"
            android:focusable="true"
            android:gravity="bottom|center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel" >
            </ImageView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/cancel"
                android:textColor="@color/btn_text" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>