<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" >

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/btn_7"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/btn_clear" android:background="@android:drawable/edit_text" android:layout_marginTop="10dp" android:layout_marginBottom="2dp">

                <EditText
                    android:id="@+id/et_value"
                    style="@style/NumButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/btn_back"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/btn_back"
                    android:background="@color/transparent"
                    android:gravity="right|center"
                    android:numeric="signed|decimal"
                    android:text="22.33"
                    android:textColor="@color/input_text"
                    android:textSize="24.0dip" android:singleLine="true"/>

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/menu_selector_background"
                    android:src="@drawable/back_space" android:layout_marginTop="-2dp"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_7"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_below="@id/relativeLayout2"
                android:layout_marginLeft="2.0dip"
                android:background="@drawable/btn_dialog"
                android:text="7"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_4"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_7"
                android:layout_alignRight="@id/btn_7"
                android:layout_below="@id/btn_7"
                android:background="@drawable/btn_dialog"
                android:text="4"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_1"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_4"
                android:layout_alignRight="@id/btn_4"
                android:layout_below="@id/btn_4"
                android:background="@drawable/btn_dialog"
                android:text="1"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_0"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_1"
                android:layout_alignRight="@id/btn_1"
                android:layout_below="@id/btn_1"
                android:background="@drawable/btn_dialog"
                android:text="0"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_8"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_below="@id/relativeLayout2"
                android:layout_toRightOf="@id/btn_7"
                android:background="@drawable/btn_dialog"
                android:text="8"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_5"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_8"
                android:layout_alignRight="@id/btn_8"
                android:layout_below="@id/btn_8"
                android:background="@drawable/btn_dialog"
                android:text="5"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_2"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_5"
                android:layout_alignRight="@id/btn_5"
                android:layout_below="@id/btn_5"
                android:background="@drawable/btn_dialog"
                android:text="2"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_2"
                android:layout_alignRight="@id/btn_2"
                android:layout_below="@id/btn_2"
                android:background="@drawable/btn_dialog"
                android:text="."
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_cal_ok"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_dot"
                android:layout_alignRight="@+id/btn_result"
                android:layout_below="@id/btn_dot"
                android:background="@drawable/btn_dialog"
                android:gravity="right|center_vertical"
                android:paddingRight="24dp"
                android:text="@string/ok"
                android:textColor="@color/input_text"
                android:textSize="18.0dip" />

            <Button
                android:id="@+id/btn_9"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignBottom="@id/btn_8"
                android:layout_alignTop="@id/btn_8"
                android:layout_toRightOf="@id/btn_8"
                android:background="@drawable/btn_dialog"
                android:text="9"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_6"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_9"
                android:layout_alignRight="@id/btn_9"
                android:layout_below="@id/btn_9"
                android:background="@drawable/btn_dialog"
                android:text="6"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_mult"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignBottom="@+id/btn_add"
                android:layout_below="@+id/btn_div"
                android:layout_toRightOf="@+id/btn_add"
                android:background="@drawable/btn_dialog"
                android:text="×"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_negative"
                style="@style/NumButtonText"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_alignRight="@id/btn_div"
                android:layout_alignTop="@id/btn_6"
                android:layout_toRightOf="@id/btn_6"
                android:background="@drawable/btn_dialog"
                android:text="+/-"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_3"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_6"
                android:layout_alignRight="@id/btn_6"
                android:layout_below="@id/btn_6"
                android:layout_toRightOf="@id/btn_2"
                android:background="@drawable/btn_dialog"
                android:text="3"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_div"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignBottom="@+id/btn_subtract"
                android:layout_alignTop="@+id/btn_subtract"
                android:layout_toRightOf="@+id/btn_subtract"
                android:background="@drawable/btn_dialog"
                android:text="÷"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_subtract"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignBottom="@id/btn_3"
                android:layout_alignTop="@id/btn_3"
                android:layout_toRightOf="@id/btn_3"
                android:background="@drawable/btn_dialog"
                android:text="-"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_result"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_3"
                android:layout_alignRight="@id/btn_3"
                android:layout_below="@id/btn_3"
                android:background="@drawable/btn_dialog"
                android:gravity="center"
                android:text="＝"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_add"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignBottom="@id/btn_result"
                android:layout_alignRight="@id/btn_subtract"
                android:layout_alignTop="@id/btn_result"
                android:layout_toRightOf="@id/btn_result"
                android:background="@drawable/btn_dialog"
                android:gravity="center"
                android:text="＋"
                android:textColor="@color/input_text" />

            <Button
                android:id="@+id/btn_cal_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_alignLeft="@id/btn_add"
                android:layout_alignRight="@id/btn_mult"
                android:layout_below="@id/btn_result"
                android:background="@drawable/btn_dialog"
                android:gravity="right|center_vertical"
                android:paddingRight="24dp"
                android:text="@string/cancel"
                android:textColor="@color/input_text"
                android:textSize="18.0dip" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_cal_cancel"
                android:layout_alignLeft="@+id/btn_cal_cancel"
                android:layout_alignTop="@+id/btn_cal_cancel"
                android:layout_marginLeft="8dp"
                android:src="@drawable/stop" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_cal_ok"
                android:layout_alignLeft="@+id/btn_cal_ok"
                android:layout_alignTop="@+id/btn_cal_ok"
                android:layout_marginLeft="8dp"
                android:src="@drawable/success" />

            <Button
                android:id="@+id/btn_clear"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_above="@+id/btn_negative"
                android:layout_alignLeft="@+id/btn_negative"
                android:layout_alignRight="@+id/btn_negative"
                android:background="@drawable/btn_dialog"
                android:text="CE"
                android:textColor="@color/input_text" />

            <ImageButton
                android:id="@+id/btn_log"
                style="@style/NumButtonText"
                android:layout_width="56.0dip"
                android:layout_height="50.0dip"
                android:layout_alignTop="@+id/btn_cal_ok"
                android:layout_toLeftOf="@+id/btn_cal_ok"
                android:background="@drawable/btn_dialog"
                android:src="@drawable/search"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>