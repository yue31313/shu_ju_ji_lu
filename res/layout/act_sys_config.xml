<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laySysConfigMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@id/top_var_view"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        layout="@layout/include_list_top" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="0.dip"
        android:layout_weight="1.0"
        android:background="@drawable/back"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/layoutbg"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/TableLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/layoutbg"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" >

                        <LinearLayout
                            android:id="@+id/LinearLayout29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" >

                            <LinearLayout
                                android:id="@+id/LinearLayout30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_only_picture"
                                    android:textColor="@color/label_text" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayout13"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0" >

                                <ToggleButton
                                    android:id="@+id/tbtnOnlyPicture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/checkbox"
                                    android:checked="true"
                                    android:ellipsize="none"
                                    android:textOff="@string/lable_no"
                                    android:textOn="@string/lable_yes"
                                    android:textSize="1dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/layoutbg" >

                        <LinearLayout
                            android:id="@+id/LinearLayout04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/LinearLayout03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_password"
                                    android:textColor="@color/label_text" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayout02"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0" >

                                <Button
                                    android:id="@+id/btnPassword"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/edit_text"
                                    android:clickable="true"
                                    android:password="true"
                                    android:text="12345678"
                                    android:textColor="@color/input_text"
                                    android:textSize="18dp" />

                                <Button
                                    android:id="@+id/btnPasswordValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:password="true"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowOnlyInt"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/layoutbg"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_only_int"
                                    android:textColor="@color/label_text" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0" >

                                <ToggleButton
                                    android:id="@+id/tbtnOnlyInt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/checkbox"
                                    android:checked="true"
                                    android:ellipsize="none"
                                    android:textOff="@string/lable_no"
                                    android:textOn="@string/lable_yes"
                                    android:textSize="1dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12.0dip"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="6.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/layoutbg"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/TableLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_weight="1.0" >

                        <LinearLayout
                            android:id="@+id/LinearLayout09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/LinearLayout08"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_database_resume"
                                    android:textColor="@color/label_text" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayout04"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0" >

                                <Button
                                    android:id="@+id/btnBackupResume"
                                    android:layout_width="wrap_content"
                                    android:layout_height="44dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/button_style"
                                    android:text="@string/lable_select_backup"
                                    android:textColor="@color/input_text"
                                    android:textSize="16dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/layoutbg" >

                        <LinearLayout
                            android:id="@+id/LinearLayout28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/LinearLayout27"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_database_path"
                                    android:textColor="@color/label_text" />

                                <TextView
                                    android:id="@+id/tvDatabasePath"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:textColor="@color/label_text"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/layoutbg" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_database_backup_path"
                                    android:textColor="@color/label_text" />

                                <TextView
                                    android:id="@+id/tvBackupPath"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:textColor="@color/label_text"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/layoutbg"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_autobackup"
                                    android:textColor="@color/label_text" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0" >

                                <ToggleButton
                                    android:id="@+id/tbtnAutoBackup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/checkbox"
                                    android:checked="true"
                                    android:textOff="@string/lable_no"
                                    android:textOn="@string/lable_yes"
                                    android:textSize="1dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowBackup"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="6.0dip"
                        android:layout_marginRight="6.0dip"
                        android:layout_marginTop="4.0dip"
                        android:background="@drawable/layoutbg" >

                        <LinearLayout
                            android:id="@+id/LinearLayout07"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" >

                            <LinearLayout
                                android:id="@+id/LinearLayout11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center"
                                    android:text="@string/config_autobackup_nums"
                                    android:textColor="@color/label_text" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/RelativeLayout05"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0" >

                                <Button
                                    android:id="@+id/btnBackupNums"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/edit_text"
                                    android:textColor="@color/input_text"
                                    android:textSize="18dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>